<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.RepatriationRootFrag">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ddd"
            android:orientation="vertical"
            android:padding="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/android_card_view_example"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#fff"

                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/cardview_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/somaliarefugees"
                        android:fontFamily="sans-serif-thin"
                        android:text="Welcome to Repatriation Services"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/mix"
                        android:textStyle="bold|italic" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/android_card_view_example1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="#ECEFF1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/cardview_list_title1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_alignParentTop="true"
                        android:fontFamily="sans-serif-thin"
                        android:text="Repatriation procedure involves citizens and their families voluntarily being returned to their country of citizenship.This service gets you informed on:"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/mix"
                        android:textSize="24sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/EditText01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_stages"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/cardview_list_title1"
                        android:layout_toLeftOf="@+id/Button01"></TextView>

                    <TextView
                        android:id="@+id/Button01"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/cardview_list_title1"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="@color/mix"
                        android:textSize="24sp"
                        android:textStyle="italic"
                        android:text="Stages involved in the repatriation process"></TextView>

                    <TextView
                        android:id="@+id/EditText02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_countryifo"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/EditText01"
                        android:layout_toLeftOf="@+id/Button02"></TextView>

                    <TextView
                        android:id="@+id/Button02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Button01"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-thin"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/mix"
                        android:textSize="24sp"
                        android:textStyle="italic"
                        android:text="Information about your country of citizenship"></TextView>



                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:onClick="onRepartBtnClick"
                android:text="CLICK TO SEE NEXT FRAG" />


        </LinearLayout>

    </ScrollView>
</FrameLayout>