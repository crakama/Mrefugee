<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="#ddd"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="false"
        android:layout_height="100dp"
        card_view:contentPadding="2dp"
        card_view:cardElevation="5dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/cv_img_helpdesk"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/somaliarefugees"
               />

            <TextView
                android:id="@+id/txttown_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/cv_img_helpdesk"
                android:textSize="24sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/txtSchool" />

            <TextView
                android:text="TextView"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSchool"
                android:id="@+id/txtHospital" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
