<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        card_view:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp"
        app:cardUseCompatPadding="true">

        <!--android:layout_gravity="center"-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:id="@+id/listview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/listview_item_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lines="6"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            />


    <TextView
        android:id="@+id/listview_item_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold|italic"
        android:paddingLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/lv_item_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="||"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold|italic"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/listview_item_organization" />


        <TextView
            android:id="@+id/lv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold|italic"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/lv_item_separator" />
    <Button
        android:id="@+id/read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@null"
        android:text="@string/read_more"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true" />
        <!--android:layout_marginTop="16dp"-->

</RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>


